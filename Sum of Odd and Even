#include <stdio.h>
int main()
{
  int n,i;
  int sume=0;
  int sumo=0;
  scanf("%d",&n);
  for(i=1;i<=n;i++)
  {
    if (i%2==0)
    {
      sume=sume+i;
    }
    else if (i%2!=0)
    {
      sumo=sumo+i;
    }
  }
  printf("%d is sum of even number and %d is sum of odd number",sume,sumo);
  return 0;
}
